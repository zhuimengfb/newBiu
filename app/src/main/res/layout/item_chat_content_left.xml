<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_horizontal"
        android:textSize="@dimen/tagSize"
        android:textColor="@color/timeColor"
        android:text="@string/time"
        />

    <RelativeLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/iv_chat_user_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            />
        <com.rockerhieu.emojicon.EmojiconTextView
            android:id="@+id/tv_chat_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_chat_user_icon"
            android:minHeight="36dp"
            android:minWidth="50dp"
            android:gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/bigTitleSize"
            android:background="@drawable/chat_item_left"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/iv_chat_pic"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_toRightOf="@id/iv_chat_user_icon"
            android:gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>
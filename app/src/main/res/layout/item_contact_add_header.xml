<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_contact_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/white"
    android:gravity="center_horizontal">

    <cn.bingoogolapple.badgeview.BGABadgeImageView
        android:id="@+id/iv_add_contact"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tv_add_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_add_contact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/add_contact"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/userNameSize"
        />


</RelativeLayout>
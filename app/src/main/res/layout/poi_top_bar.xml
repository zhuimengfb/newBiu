<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/home_me_switch_tab_line"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#26D5B6"
        android:weightSum="5"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#26D5B6"
            android:orientation="horizontal" >
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2" >

                <ImageButton
                    android:id="@+id/poi_back"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:clickable="true"
                    android:paddingBottom="15dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="12dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/back" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="3"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:weightSum="1" >

            <LinearLayout
                android:id="@+id/top_change_bt"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_gravity="center|center_vertical|center_horizontal"
                android:layout_weight="0.65"
                android:weightSum="2" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.45" >
                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1.1" >

                    <TextView
                        android:id="@+id/biu_main_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="探索"
                        android:textColor="@android:color/white"
                        android:textSize="15dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/home_frg_change"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:visibility="visible" >

                        <Button
                            android:id="@+id/home_frg_new"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@drawable/switching2"
                            android:text="@string/home_top_center_new"
                            android:textColor="@color/biu_main_color"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/home_frg_hot"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@drawable/switching4"
                            android:text="@string/home_top_center_hot"
                            android:textColor="@color/umeng_fb_white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.45" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

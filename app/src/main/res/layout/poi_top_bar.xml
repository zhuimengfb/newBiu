        android:layout_height="3dp"
        android:background="#03B897"
        android:contentDescription="tab" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#00000000" > 
    </LinearLayout>
-->
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <!-- 帖子详情的TabTop布局 -->

	<LinearLayout
	    android:id="@+id/home_me_switch_tab_line"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:background="#26D5B6"
	    android:orientation="horizontal" >

	    <ImageButton 
	        android:id="@+id/publish_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="15dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:paddingRight="10dp"
	        android:layout_gravity="center_vertical"
	        android:background="#00000000"
	        android:src="@drawable/back"
	        />
	    <ImageView
	        android:id="@+id/detail_logo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	        android:background="#00000000"
	        android:contentDescription="submit"
	        android:src="@drawable/logo_small" />

	    <TextView
	        android:id="@+id/TabTopTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="5dp"
	        android:layout_gravity="center_vertical"
	        android:textColor="@android:color/white"
	        android:textSize="20sp"
	        android:text="@string/title_detail" />
		
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:orientation="vertical"
	        android:paddingRight="10dp">
	        
	         
	        <ImageButton
	        android:id="@+id/deletetipbtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:paddingRight="10dp"
	        android:background="#00000000"
	        android:visibility="invisible"
	        android:src="@drawable/trash" />
	    </LinearLayout>
	   

	</LinearLayout>
	
	<ImageView 
	    android:id="@+id/id_tab_line_iv"
	    android:layout_width="fill_parent"
	    android:layout_height="3dp"
	    android:background="#03B897"
	    android:contentDescription="tab"
	    />
	 <LinearLayout 
	     android:layout_width="fill_parent"
	     android:layout_height="2dp"
	     android:background="#00000000">
	     
	 </LinearLayout>
</LinearLayout>

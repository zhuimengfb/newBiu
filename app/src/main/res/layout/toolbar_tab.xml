<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:visibility="gone"
              android:layout_height="55dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/top_change_bt"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center|center_vertical|center_horizontal"
            android:layout_weight="0.6"
            android:weightSum="5" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.3" >
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="2.4" >

                <TextView
                    android:id="@+id/biu_main_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="探索"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/home_frg_change"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <Button
                        android:id="@+id/home_frg_new"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="-10dp"
                        android:paddingRight="-10dp"
                        android:background="@drawable/switch_active"
                        android:text="@string/home_top_center_new"
                        android:textColor="@color/biu_main_color"
                        android:textSize="@dimen/top_center_size" />

                    <Button
                        android:id="@+id/home_frg_hot"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:paddingLeft="-10dp"
                        android:paddingRight="-10dp"
                        android:background="@drawable/switch_inactive"
                        android:text="@string/home_top_center_hot"
                        android:textColor="@color/umeng_fb_white"
                        android:textSize="@dimen/top_center_size" />
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1.3" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>